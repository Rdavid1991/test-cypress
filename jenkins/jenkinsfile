pipeline {
    agent any
    
    stages {
        stage('Obteniendo recursos') {
            steps {
                
                //Borrado de carpeta de prueba
                sh  '''
                    DIR="copiaColmena/"
                    if [ -d "$DIR" ]; then
                        rm -r copiaColmena
                    fi
                    '''
                
                sh  '''
                    DIR="PreCOLMENA.WebApp/"
                    if [ -d "$DIR" ]; then
                        cd PreCOLMENA.WebApp
                        git checkout -- .
                        git pull
                    else
                        git clone https://github.com/richter02/PreCOLMENA.WebApp.git
                    fi
                    '''
            }
        }
        
        stage('Despliegando') {
            steps {
                sh "cd PreCOLMENA.WebApp"
                sh "echo hola"
                sh "pwd"
                sh '''
                    cp -r ./PreCOLMENA.WebApp ./copiaColmena
                    cd copiaColmena
                    rm .prettierrc.json .gitignore
                    rm -r db_files .git
                '''
                    
                sh '''
                    ssh -T -i /var/lib/jenkins/id_rsa vagrant@10.0.2.15
                    pwd
                '''
            }
        }
    }
}
